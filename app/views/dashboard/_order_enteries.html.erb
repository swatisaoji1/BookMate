<div class="modal fade" id="myModalo" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
		<div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h4 class="modal-title">Order Details</h4>
        </div>
      <div class="modal-body"> 
      	<div class="container">
			<div class="row col-sm-10 title">
				<div class="col-sm-4">
					<p> Book Title</p>
				</div>
				<div class="col-sm-2">
					<p> Quantity </p>
				</div>
				<div class="col-sm-2">
					<p> Total Price </p>
				</div>
				
				</hr>
			</div>
		</div>
      	
		<div class="container">
			
			<% order_enteries.each do |order_entry| %>
			<div class="row col-sm-10">
				<div class="col-sm-4">
					<p> <%= Book.find(order_entry.book_id).title %> </p>
				</div>
				<div class="col-sm-2">
					<p> <%= order_entry.quantity %> </p>
				</div>
				<div class="col-sm-2">
					<p> $<%= order_entry.total_price %> </p>
				</div>
				
				</hr>
			</div>
			
			<% end %>
		</div>
      </div>
		<div class="modal-footer">
		
		</div>
    </div>
  </div>
</div>