<div>
    <!-- Header Carousel -->
    <div id="myCarousel" class="carousel slide">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="http://justaworldaway.com/wp-content/uploads/2014/08/harry-potter-montage.jpg" style="background-image:url('text=Slide One');" class="center image-carousel" alt="">
                <div class="carousel-caption">
                    <h2>Buy Books!!!</h2>
                </div>
            </div>
            <div class="item">
                <img src="http://freeunlimitedebooks.com/wp-content/uploads/2015/04/53.jpg" style="background-image:url('text=Slide One');" class="center image-carousel" alt="">
                <div class="carousel-caption">
                    <h2>Sell Books!!!</h2>
                </div>
            </div>
            <div class="item">
                <img src="http://www.startsateight.com/wp-content/uploads/2013/10/The-Chronicles-of-Narnia-Book-Series-640x223.jpg" style="background-image:url('text=Slide One');" class="center image-carousel" alt="">
                <div class="carousel-caption">
                    <h2>Rent Books!!!</h2>
                </div>
            </div>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="icon-prev"></span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="icon-next"></span>
        </a>
    </div>

    <!-- Page Content -->
    <div class="container">
        <!-- Marketing Icons Section -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Welcome to BookMate
                </h1>
                <p>A peer-to-peer application for buying, selling and renting books! <br /> Make a wish list for the books which you want to buy or rent and you will receive real-time notifications when they are available courtesy your facebook friends! <br /> Check out our cool features below! </p>
                <p></p>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-check"></i> Compare with Amazon </h4>
                    </div>
                    <div class="panel-body">
                        <p>Compare the prices of the books posted by your friends with the prices offered by Amazon!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-gift"></i> Buy a book </h4>
                    </div>
                    <div class="panel-body">
                        <p>Get real time notifications of books for sale or rent posted by your bookmates! </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4><i class="fa fa-fw fa-compass"></i> Sell a book </h4>
                    </div>
                    <div class="panel-body">
                        <p>Send instant notifications to your bookmates when you upload a book for sale or rent! </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <!-- Portfolio Section -->
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">Featured Books!</h2>
            </div>
            <% @books = featured_books %>
            <% @books.each do |book| %>
            <div class="col-md-3 col-sm-6">
                <a href=/books/<%=book.id%>/>
                    <img class="img-response img-portfolio img-hover" src="<%= book.image_path %>" alt="">
                </a>
            </div>
            <% end %>
        </div>
        <!-- /.row -->
        <hr>
        <hr>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Script to Activate the Carousel -->
    <script>
    $('.carousel').carousel({
        interval: 3000 //changes the speed
    })
    </script>
</div>
