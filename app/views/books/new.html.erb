
<h2>Add a Book</h2>
<p> </p>
<%= form_for @book do |f| %>
<p> 
<%= f.label :title %> <br/>
<%= f.text_field :title %>
</p>
<p> 
<%= f.label :isbn %> <br/>
<%= f.text_field :isbn %>
</p>

<p> 
<%= f.label :description %> <br/>
<%= f.text_field :description %>
</p>

<p> 
<%= f.label :image_path %> <br/>
<%= f.text_field :image_path %>
</p>

<p> 
<%= f.label :price %> <br/>
<%= f.text_field :price %>
</p>

<p> 
<%= f.label :quantity %> <br/>
<%= f.text_field :quantity %>
</p>

<p> 
<%= f.submit "Add Book" %>
</p>
